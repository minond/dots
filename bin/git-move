#!/usr/bin/env bash

set -eo pipefail

branch=$1
if [ -z "$branch" ]; then
  if [ `git rev-parse --verify main 2>/dev/null` ]; then
    branch=main
  else
    branch=master
  fi
fi

echo "updating $branch"

git fetch --all
git fetch --prune --prune-tags
git checkout $branch
git pull --rebase origin $branch
[ -f .gitmodules ] && git submodule update

echo "status $branch for"
git status
