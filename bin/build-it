#!/bin/bash

#==============================================================================
#        USAGE: build-it [resource]
#  DESCRIPTION: Figure out how to build something and do it.
#  PARAMETER 1: Optional path to resource. Build everything by default.
#==============================================================================

set -eo pipefail

if project-is-of-type go; then
  [ -z "$1" ] && args=./... || args=${@:1}
  echo go build $args
  go build $args
fi
